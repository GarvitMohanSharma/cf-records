import java.util.*;
public class alpha {
  public static void main(String[] args) {
    Scanner sc=new Scanner(System.in);
    int t=sc.nextInt();
    while(t-->0){
     int a=sc.nextInt();
     int b=sc.nextInt();
     int m=0;
     if(a>=b)
     m=b;
     else
     m=a;
     while(true)
     {
         if((m%a)==(m%b))
         {
             System.out.println(m);
             break;
         }
         m++;
     }
    }
  }
}
