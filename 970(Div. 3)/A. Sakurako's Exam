import java.io.*;
import java.util.*;

public class alpha {
	public static void main (String[] args) {
		Scanner sc=new Scanner(System.in);
		int t=sc.nextInt();
		for (int i=1;i<=t;i++)
		{
		    int a=sc.nextInt();
		    int b=sc.nextInt();
		    if(!(a%2==1) && !(a<2) && !(b%2==0))
		    System.out.println("Yes");
		    else
		    if(!(b%2==1) && !(a%2==1))
		    System.out.println("Yes");
		    else
		    System.out.println("NO");
		}
	}
}
